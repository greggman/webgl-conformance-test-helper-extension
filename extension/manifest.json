{
  "name": "WebGL Conformance Test Helper Extension",
  "version": "0.1",
  "description": "help the WebGL conformance tests",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "externally_connectable": {
    "matches": [
      "https://www.khronos.com/registry/webgl/sdk/tests/*",
      "*://greggman.github.io/webgl-conformance-tests-helper-extension/*",
      "*://localhost/*"
    ]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "WebGL Conformance Test Helper Extension"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "manifest_version": 2
}
